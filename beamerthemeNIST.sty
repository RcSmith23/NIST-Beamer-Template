\mode<presentation>

% Requirements
\RequirePackage{tikz}
\RequirePackage{fontspec}
\RequirePackage{mdframed}

\setmainfont[
  Path        = ./fonts/,
  Extension   = .ttf
]{DejaVuSans}

% Settings
\useinnertheme{NIST}
\useoutertheme{NIST}
\usecolortheme{NIST}

%\setbeamerfont{title}

\setbeamertemplate{itemize items}[circle]
\setbeamertemplate{enumerate items}[circle]

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[rounded][shadow=true]

\mdfdefinestyle{titlestyle}{linecolor=white,linewidth=1pt,backgroundcolor=seashell-bg}

\mode<all>
