\mode<presentation>

% Requirementsjk
\RequirePackage{tikz}
\RequirePackage{fontspec}
\RequirePackage{dashrule}

\setmainfont[
  Path        = ./fonts/,
  Extension   = .ttf
]{DejaVuSans}

\newfontfamily{\DejaVu}[
  Path            = ./fonts/,
  Extension       = .ttf,
  BoldFont        = *-Bold,
  ItalicFont      = *-Oblique,
  BoldItalicFont  = *-BoldOblique
]{DejaVuSans}

\newfontfamily{\DejaVuC}[
  Path        = ./fonts/,
  Extension   = .ttf,
  BoldFont    = *-Bold
]{DejaVuSansCondensed}

\newfontfamily{\DejaVuEL}[
  Path        = ./fonts/,
  Extension   = .ttf
]{DejaVuSans-ExtraLight}

\RequirePackage[font={color=white,scriptsize},labelfont={color=white}]{caption}
%\captionsetup{labelfont=scriptsize}

% Settings
\useinnertheme{NIST}
\useoutertheme{NIST}
\usecolortheme{NIST}

% Set font options for primary types
\setbeamerfont{title}{family=\DejaVuEL,size=\Large}
\setbeamerfont{author}{family=\DejaVu}
\setbeamerfont{footline}{size=\scriptsize}

% Slide title and subtitle font settings
\setbeamerfont{frametitle}{family=\DejaVu}
\setbeamerfont{framesubtitle}{family=\DejaVu,size=\large}

% Custom stylings
\setbeamertemplate{itemize/enumerate body begin}{\Large}
\setbeamertemplate{itemize/enumerate subbody begin}{\large}

% Set bullet styling for lists and enumerations
\setbeamertemplate{itemize item}{\bullet}
\setbeamertemplate{itemize subitem}{\circ}
\setbeamertemplate{enumerate items}[default]

% Remove the navigation symbols
\setbeamertemplate{navigation symbols}{}

% Place in the footer 
\setbeamertemplate{footline}{%
  \ifnum\c@framenumber=1
  \else
    \hfill\usebeamerfont{footline}\insertframenumber%
    \hspace{1mm}|\hspace{1mm}%
    \inserttotalframenumber\hspace{2mm}%
    \vspace{2mm}
  \fi
}
\mode<all>
