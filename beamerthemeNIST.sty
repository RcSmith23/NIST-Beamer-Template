\mode<presentation>

% Requirementsjk
\RequirePackage{tikz}
\RequirePackage{fontspec}
\RequirePackage{dashrule}

\setmainfont[
  Path        = ./fonts/,
  Extension   = .ttf
]{DejaVuSans}

\newfontfamily{\DejaVu}[
  Path            = ./fonts/,
  Extension       = .ttf,
  BoldFont        = *-Bold,
  ItalicFont      = *-Oblique,
  BoldItalicFont  = *-BoldOblique
]{DejaVuSans}

\newfontfamily{\DejaVuC}[
  Path        = ./fonts/,
  Extension   = .ttf,
  BoldFont    = *-Bold
]{DejaVuSansCondensed}

\newfontfamily{\DejaVuEL}[
  Path        = ./fonts/,
  Extension   = .ttf
]{DejaVuSans-ExtraLight}

% Settings
\useinnertheme{NIST}
\useoutertheme{NIST}
\usecolortheme{NIST}

% Set font options for primary types
\setbeamerfont{title}{family=\DejaVuEL}
\setbeamerfont{author}{family=\DejaVuEL}
\setbeamerfont{footline}{size=\scriptsize}

% Set bullet styling for lists and enumerations
% \setbeamertemplate{itemize items}[circle]
% \setbeamertemplate{enumerate items}[circle]
% Custom stylings
\setbeamertemplate{itemize items}[circle]
\setbeamertemplate{enumerate items}[circle]

\setbeamertemplate{itemize/enumerate body begin}{\Large}
\setbeamertemplate{itemize/enumerate subbody begin}{\large}

% Remove the navigation symbols
\setbeamertemplate{navigation symbols}{}

% Place in the footer 
\setbeamertemplate{footline}{%
  \ifnum\c@framenumber=1
  \else
    \hfill\usebeamerfont{footline}\insertframenumber%
    \hspace{1mm}|\hspace{1mm}%
    \inserttotalframenumber\hspace{2mm}%
    \vspace{2mm}
  \fi
}
\mode<all>
