% Title page
\defbeamertemplate*{title page}{NIST}[1][]{ 
  \vskip1cm%
  \begin{beamercolorbox}[center,sep=1.5cm]{title page header}
    \usebeamerfont{title}\inserttitle\par%
  \end{beamercolorbox}%

  \vskip1.4cm%
  \begin{tikzpicture}
    \useasboundingbox (0,0) rectangle(0.8\paperwidth,3cm);
    % Place NIST logo on left hand side
    {\node[anchor=west,white](P) at (current bounding box.west) {%
      \hspace{-1cm}\includegraphics[width=3.5cm]{NISTLogoWhite.png}
    };}
    % Attach name and date to NIST logo then shift right
    {\node[anchor=west,white,align=right] at (P.east) 
      {\hspace{9.5cm}\usebeamerfont{author}\insertauthor\\%
      \usebeamerfont{author}\insertdate};}
  \end{tikzpicture}
}

